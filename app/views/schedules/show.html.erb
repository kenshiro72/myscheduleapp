<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @schedule.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @schedule.startdate.strftime("%Y/%m/%d")   %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.enddate.strftime("%Y/%m/%d")   %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%=  convert_boolean_to_character(@schedule.allday)  %></td>
  </tr>
  <tr>
  <th>スケジュールメモ</th>
  <td><%= @schedule.memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
  </ul>
</div>
